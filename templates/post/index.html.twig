{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container text-center">
        <h1>Post index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Code</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.code }}</td>
                    <td>{{ post.content }}</td>
                    <td>
                        <a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
                        <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_post_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script src="{{ asset('js/post_index.js') }}"></script>
 {% endblock %}
