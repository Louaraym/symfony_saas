{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-2">{{ post.title }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ post.code }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_post_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary">edit</a>

        {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
